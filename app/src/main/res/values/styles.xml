<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="title1" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/work_sans_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="title2" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/work_sans_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="title3" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/work_sans_bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="body1" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/work_sans</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="body2" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/work_sans</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
